<h2>{{blog.title}}</h2>
<p>{{blog.content}}</p>

<h3>Comments:</h3>
<ul>
  {{#each blog.comments}}
    <li>{{this.content}} - Posted by {{this.User.username}}</li>
  {{else}}
    <li>No comments yet</li>
  {{/each}}
</ul>

<form id="new-comment-form">
  <textarea id="comment-content" name="content" placeholder="Add a comment"></textarea>
  <button type="submit">Post Comment</button>
</form>

<script src="/public/js/comment.js"></script>

