 <div class="container">
    <h2>Your Blogs</h2>
    <h3>Welcome to Your Blog!</h3>

    <ul class="blog-list">
      {{#each usersData.Blogs}}
        <li>
          <h3>{{this.title}}</h3>
          <p>{{this.content}}</p>
          <button data-id="{{this.id}}" class="delete-btn">Delete</button>
        </li>
      {{/each}}
    </ul>

    <form class="new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title</label>
        <input type="text" id="blog-title" name="blog-title" required>
      </div>

      <div class="form-group">
        <label for="blog-content">Content</label>
        <textarea id="blog-content" name="blog-content" required></textarea>
      </div>

      <button type="submit" class="add-btn">Add Blog</button>
    </form>
  </div>

  <script src="/js/blog.js"></script>
